<Window x:Class="Cake_Shop.OrderReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Cake_Shop"
        mc:Ignorable="d"
        Title="OrderReviewWindow" 
        Height="600" Width="550"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" ShowInTaskbar="False"
        Loaded="Window_Loaded">

    <Border BorderThickness="0">

        <Border.Background>
            <SolidColorBrush Color="White"
                             Opacity="0.7"/>
        </Border.Background>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="OrderDetail"
                      AutoGenerateColumns="False"
                      Grid.Row="1"
                      Grid.Column="1"
                      hc:DataGridAttach.CanUnselectAllWithBlankArea="True">
                <DataGrid.Background>
                    <SolidColorBrush Color="White"
                                     Opacity="0.9"/>
                </DataGrid.Background>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên bánh"
                                        Width="1*"
                                        Binding="{Binding Item1.CakeName}"/>
                    <DataGridTextColumn Header="Loại bánh"
                                        Width="1*"
                                        Binding="{Binding Item1.CakeNameType}"/>
                    <DataGridTextColumn Header="Đơn giá"
                                        Width="1*"
                                        Binding="{Binding Item1.CakePrice}"/>
                    <DataGridTextColumn Header="Số lượng"
                                        Width="1*"
                                        Binding="{Binding Item2}"/>
                    <DataGridTextColumn Header="Thành tiền"
                                        Width="1*"
                                        Binding="{Binding Item3}"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="2">
                <Button x:Name="Cancel"
                    Content="Đóng"
                    Style="{StaticResource ButtonDashedDanger}"
                    hc:BorderElement.CornerRadius="10"
                    Width="100" Click="Cancel_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
